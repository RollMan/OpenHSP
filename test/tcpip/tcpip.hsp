#include "hsp3dish.as"
*init
  domain = "127.0.0.1"
  sockopen 0, domain, 12345
  if stat != 0 {
    mes "stat: " + stat
    goto *endp
  }

sdim buf, 1024
*main
  recv = 0
  sockget buf, 7, 0
  if stat == -2 {
    mes "ERROR"
    goto *endp
  }
  if stat == -1 {
    goto *main
  }
  mes buf
  goto *main

*endp
