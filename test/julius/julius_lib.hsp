#include "hsp3cl.as"

#module
    #modinit
        sdim buf, 4096
        W_PREFIX = "WORD=\""
        W_POSTFIX = "\""
        CM_PREFIX = "CM=\""
        CM_POSTFIX = "\""
        W_PREFIX_LEN = 6
        W_POSTFIX_LEN = 1
        CM_PREFIX_LEN = 4
        CM_POSTFIX_LEN = 1
        return

    #defcfunc is_recieved int _socidx
        socidx = _socidx
        sdim tmpbuf, 4096
        sockgetm tmpbuf, 2048, socidx, 64
        if status == 0 : buf += tmpbuf
        else : if status != -11 {
          mes "Error while reading socket"
          end
        }
        if instr(buf, 0, ".\n") == -1 {
          return -1
        }
        return 0

    #defcfunc get_word_list
        repeat -1
          p1 = instr(buf, pidx, W_PREFIX)
          if p1 == -1 : end
          p1 = p1 + pidx
          p2 = instr(buf, p1+W_PREFIX_LEN, W_POSTFIX)
          if p2 == -1 : end
          word = strmid(buf, p1+W_PREFIX_LEN, p2)
          words(idx) = word
          idx = idx+1
          pidx = p1+W_PREFIX_LEN+p2+W_POSTFIX_LEN
        loop
        buf = ""
        return words
#global

